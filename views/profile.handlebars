
<div class="row">

  <div class="col-sm-4">
    <div class="card my-4 shad">
      <a href="/uploadImage">
        <img src="{{user.image}}" class="card-img-top" alt="{{user.fullname}}">
      </a>
      <div class="card-body">   
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <table class="my-4">
      <tbody>
        <tr>
          <th class="mr-3"><i class="bi bi-person-badge"></i> Full name</th>
          <td><h5 class="card-title">{{user.fullname}}</h5></td>
        </tr>
        <tr>
          <th class="mr-3"><i class="bi bi-envelope"></i> Email</th>
          <td><p class="card-text">{{user.email}}</p></td>
        </tr>
        <tr>
          <th class="mr-3"><i class="bi bi-person-bounding-box"></i> Gender</th>
          <td><p class="card-text">{{user.gender}}</p></td>
        </tr>
        <tr>
          <th class="mr-3"><i class="bi bi-calendar"></i> Age</th>
          <td><p class="card-text">{{user.age}}</p></td>
        </tr>
        <tr>
          <th class="mr-3"><i class="bi bi-file-earmark-richtext"></i> About</th>
          <td><p class="card-text">{{user.about}}</p></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="offset-sm-2">
  </div>

</div>