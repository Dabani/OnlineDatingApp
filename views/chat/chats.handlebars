<div class="row">
  <div class="col-sm-6 my-3">
    <h3 class="card-header bg-dark-trans shad">Imishyikirano watumiwemo</h3>
    {{#each received}}
      <div class="d-flex my-3 shad bg-dark-trans p-3">
        <div class="flex-shrink-0">
          <a href="startChat/{{sender._id}}">
            <img src="{{sender.image}}" class="align-self-start mr-3 rounded-circle img-thumbnail">
          </a>
        </div>
        
        <div class="flex-grow-1 ms-3">
          <a href="/startChat/{{sender._id}}">
            <p><strong class="mt-0">{{sender.fullname}}</strong></p>
          </a>
          <div class="row">
            <div class="col-10">
              {{#if receiverRead}}
                <a href="/startChat/{{sender._id}}">
                  <i class="bi bi-envelope-open lead"></i>
                </a>
              {{else}}
                <a href="/startChat/{{sender._id}}">
                  <i id="closed-envelope" class="bi bi-envelope-fill lead"></i>
                </a>      
                <script>
                  setInterval(function(){
                    document.getElementById('closed-envelope').style.color = 'yellow';
                  },10)
                  setInterval(function(){
                    document.getElementById('closed-envelope').style.color = 'red';
                  },40)
                </script>
              {{/if}}
              <small>{{getLastMoment date 'hour'}}</small>
            </div>
            <div class="col-2 float-right text-end">
              <a href="/deleteChat/{{_id}}" class="text-danger">
                <i class="bi bi-trash lead"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <p class="text-danger p-4 my-3 shad">Nta biganiro bihari!</p>
    {{/each}}
  </div>
