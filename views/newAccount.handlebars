<div class="row">
  <div class="col-sm-4 offset-sm-4 my-4 bg-dark-trans shad">
    <h3 class="my-3 text-center"><i class="bi bi-person-plus"></i> Kwibaruza</h3>
    <form action="/signup" method="post">
      {{#each errors}}
      <div class="alert alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {{text}}
      </div>
      {{/each}}
      <div class="form-group my-3">
        <label for="username"><i class="bi bi-person-badge"></i> Amazina</label>
        <input type="text" name="username" id="username" value="{{fullname}}" class="form-control" required>        
      </div>

      <div class="form-group my-3">
        <label for="email"><i class="bi bi-envelope"></i> Email</label>
        <input type="email" name="email" id="email" value="{{email}}" class="form-control" required> 

      </div>

      <div class="form-group my-3">
        <label for="password"><i class="bi bi-key"></i> Ijambo ry'ibanga</label>
        <input type="password" name="password" id="password" value="{{password}}" class="form-control" required>        
      </div>
      
      <div class="form-group my-3">
        <label for="password2"><i class="bi bi-eye-slash"></i> Subiramo Ijambo ry'ibanga</label>
        <input type="password" name="password2" id="password2" value="{{password2}}" class="form-control" required>        
      </div>

      <button type="submit" class="btn btn-primary my-3"><i class="bi bi-person-plus"></i> Ibaruze</button>
    </form>
  </div>
</div>