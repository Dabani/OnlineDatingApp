<div class="col-sm-4 offset-sm-4 p-3 my-4 shad">
  <h1 id="spinner" style="display:none">
    <i class="bi bi-hourglass-split"></i> Tegereza ...
  </h1>
  <form action="/uploadAvatar" method="POST" id="uploadForm">

    <div class="form-group my-3">
      <button class="btn btn-success upload-btn" type="button">
        <i class="bi bi-search"></i> Hitamo ishusho
      </button>
      <input type="file" name="upload" id="upload-input" style="display:none">
    </div>

    <div class="form-group my-3">
      <button class="btn btn-danger" type="button" onclick="showSpinner()">
        <i class="bi bi-upload"></i> Ohereza
      </button>
    </div>
    
  </form>
</div>
<script>
  function showSpinner(){
    document.getElementById('uploadForm').style.display = 'none';
    document.getElementById('spinner').style.display = 'block';
    setTimeout(function(){
      document.getElementById('uploadForm').submit();
    },7000)
  }
</script>
