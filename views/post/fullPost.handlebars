<div class="row">
  <div class="col-sm-8 offset-sm-2 shad my-4 bg-dark-trans p-4">

    <!-- Media object -->
    <div class="d-flex">
      <!-- Image -->
      <div class="flex-shrink-0">
      <a href="/userProfile/{{post.postUser._id}}">
        <img
          src="{{post.postUser.image}}"
          class="me-3 rounded-circle img-thumbnail"
        />
      </a>
      </div>
      <!-- Media body -->
      <divclass="flex-grow-1 ms-3">
        <h5 class="fw-bold">
          {{post.title}}
          <br>
          <small class="text-muted">{{formatTime date "DD/MM/YY - HH:mm:ss"}}</small>
        </h5>
        <p>
          {{post.body}}
        </p>
        <!-- Nested Media object -->
        
        {{#each post}}
        {{#each comments}}
        <div class="d-flex mt-4">
          <a href="/userProfile/{{commentUser._id}}">
            <img
              src="{{commentUser.image}}"
              class="me-3 rounded-circle img-thumbnail"
            />
          </a>
          <div>
            <p class="fw-bold">
              {{commentBody}}
            </p>
              
              <br>
              <small class="text-muted">{{getLastMoment date 'hour'}}</small>
          </div>
        </div>
        {{/each}}
        {{/each}}


        {{#each post}}
        {{#each likes}}
        <div class="d-flex mt-4">
          <a href="/userProfile/{{likeUser._id}}">
            <img
              src="{{likeUser.image}}"
              class="me-3 rounded-circle img-thumbnail"
            />
          </a>
          <div>
            <h5 class="fw-bold">
              <i class="bi bi-hand-thumbs-up"></i>
              <br>
              <small class="text-muted">{{getLastMoment date 'hour'}}</small>
            </h5>
          </div>
        </div>
        {{/each}}
        {{/each}}
        <!-- Nested Media object -->
        <br>
        {{#if post.allowComments}}
        <form action="/leaveComment/{{post._id}}" method="post" class="form-inline">
          {{!-- <div class="form-group my-3 mx-sm-2 mg-2">
            <input type="text" name="commentBody" class="form-control" placeholder="Tanga igitekerezo">

            <button type="submit" class="btn btn-primary my-3">
              <i class="bi bi-chat-text"></i>
            </button>
          </div> --}}

          <div class="input-group mb-3">
            <input type="text" class="form-control" name="commentBody" placeholder="Tanga igitekerezo" aria-label="Tanga igitekerezo" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="bi bi-chat-text"></i></button>
          </div>
        </form>
        {{else}}
        <p class="text-danger">Comment is not allowed!</p>
        {{/if}}
      </divclass=>
      <!-- Media body -->
    </div>
    <!-- Media object -->

  </div>
</div>