<div class="row">
  <div class="col-sm-6 offset-sm-3 my-4 py-3 shad">
    <h3>
      <img src="{{chat.sender.image}}" class="chatroom-users rounded-circle img-thumbnail">
      <img src="{{chat.receiver.image}}" class="chatroom-users rounded-circle img-thumbnail">
    </h3>

    <hr>

    <div id="messages">

      {{#each chat}}
      {{#each chats}}
      {{#if receiverMessage}}
        <div class="d-flex mb-3">
          <div class="flex-grow-1 ms-3 text-end mr-4 p-2 dialog receiver">
            <p><strong>{{receiverMessage}}</strong></p>
            <small>{{date}}</small>
          </div>
          <div class="flex-shrink-0 ml-4">
            <img src="{{receiverName.image}}" class="chatroom-users rounded-circle img-thumbnail">
          </div>
        </div>
      {{/if}}
      
      {{#if senderMessage}}
        <div class="d-flex mb-3">
          <div class="flex-shrink-0">
            <img src="{{senderName.image}}" class="chatroom-users rounded-circle img-thumbnail">
          </div>
          <div class="flex-grow-1 ms-3 p-2 dialog sender">
            <p><strong>{{senderMessage}}</strong></p>
            <small>{{date}}</small>
          </div>
        </div>
      {{/if}}
      {{/each}}
      {{/each}}
    </div>

    <form action="/chat/{{chat._id}}" method="post">
      <input type="text" name="chat" class="form-control" placeholder="Type message">
      <button type="submit" class="btn btn-primary my-3">Send</button>
    </form>
  </div>
</div>  