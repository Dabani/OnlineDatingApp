<h1><i class="bi bi-house-door"></i> Welcome to Rambagiza Dating!</h1>
<div class="row">
  <div class="col-sm-4 offset-sm-4 my-4 p-4 shad">
    {{#if user}}
    <p>Hello {{user.firstname}}, you are now logged in...</p>
    {{else}}
    <p class="text-center">
      <a href="/auth/facebook" class="btn btn-primary btn-lg">Login with Facebook</a>
    </p>

    <p class="text-center">
      <a href="/auth/google" class="btn btn-danger btn-lg">Login with Google</a>
    </p>
    {{/if}}
    <p class="text-center">or</p>
    <form action="/login" method="post">
      
      {{#each success}}
      <p class="text-success">
        {{text}}
      </p>
      {{/each}}

      {{#each errors}}
      <p class="text-danger">
        {{text}}
      </p>
      {{/each}}

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary my-3">Login</button>
    </form>
    <a href="/newAccount" class="my-3">Need Account?</a>
  </div>
</div>