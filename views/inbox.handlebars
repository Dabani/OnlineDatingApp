<div class="row">
  <div class="col-sm-8 offset-sm-2 my-4 p-3 bg-dark-trans shad">
    {{#each messages}}
      <div class="d-flex bg-dark-trans shad p-3 my-4">        
        <div class="flex-grow-1 ms-3">
          <h3>{{fullName}}</h3>          
          {{!-- <p>{{email}}</p> --}}
          <p>{{message}}</p>
          <p>Bwanditswe: <small>{{formatTime date 'DD/MM/YYYY - hh:mm:ss'}}</small></p>
        </div>
      </div>
    {{else}}
      <p class="text-warning">
        Nta butumwa buhari
      </p>
    {{/each}}
  </div>
</div>